{% extends 'base.html.twig' %}

{% block title %}Log in {% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<form method="post" class="card p-4 shadow">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="alert alert-info">
							Vous vous Ãªtes connecter en tant que: 
							{{ app.user.userIdentifier }}.
							<a href="{{ path('app_logout') }}" class="alert-link">Logout</a>
						</div>
					{% endif %}

					<h1 class="h4 mb-3 text-center">Veuillez vous connecter</h1>

					<div class="form-group mb-3">
						<label class="form-label" for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Enter your email" autocomplete="email" required autofocus>
					</div>

					<div class="form-group mb-3">
						<label class="form-label" for="inputPassword">Mot de passe</label>
						<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Enter your password" autocomplete="current-password" required>
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button class="btn btn-primary btn-block mt-3" type="submit"> Connecter </button>

					<p class="text-center mt-3">
						Vous n'avez pas encore de compte?
						<a href="{{ path('app_register') }}">S'inscrire ici</a>.
					</p>
				</form>
			</div>
		</div>
	</div>
{% endblock %}