{% extends 'admin/base.html.twig' %}

{% block title %}Admin Marques{% endblock %}

{% block content %}
    <h1>Liste des marques</h1>

    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
                <td class="detail-action">
                    <a href="{{ path('app_brand_edit', {'id': brand.id}) }}">
                        <i class="fa fa-pencil"></i>
                    </a>
                    {{ include('admin/brand/_delete_form.html.twig') }}
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="3"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_brand_new') }}">Cr√©er une marque</a>
{% endblock %}
