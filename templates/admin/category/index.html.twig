{% extends 'admin/base.html.twig' %}

{% block title %}Admin - types{% endblock %}

{% block content %}
    <h1>Liste des types</h1>

    <table class="table table-striped table-bordered">
			<thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                 <td class="detail-action">
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">
                        <i class="fa fa-pencil"></i>
                    </a>
                    {{ include('admin/category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Cr√©er</a>
{% endblock %}
