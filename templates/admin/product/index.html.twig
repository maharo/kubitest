{% extends 'admin/base.html.twig' %}

{% block title %}Admin - Produits{% endblock %}

{% block content %}
   
    <table class="table table-striped table-bordered">
			<thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Nom du produit</th>
                <th>Année</th>
                <th>Source</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.year }}</td>
                <td>{{ product.energy }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.stock }}</td>
              
                <td class="detail-action">
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}"><i class="fa fa-pencil"></i></a>
                    {{ include('admin/product/_delete_form.html.twig') }}
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}">Créer un produit</a>
{% endblock %}
