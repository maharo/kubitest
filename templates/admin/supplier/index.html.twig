{% extends 'admin/base.html.twig' %}

{% block title %}Admin fournisseurs{% endblock %}

{% block content %}
    <h1>Liste des fournisseurs</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


    <table class="table table-striped table-bordered">
			<thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for supplier in suppliers %}
            <tr>
                <td>{{ supplier.id }}</td>
                <td>{{ supplier.name }}</td>
                <td>{{ supplier.email }}</td>
                <td>{{ supplier.phone }}</td>
               
                <td class="detail-action">
                    <a href="{{ path('app_supplier_edit', {'id': supplier.id}) }}">
                        <i class="fa fa-pencil"></i>
                    </a>
                    {{ include('admin/supplier/_delete_form.html.twig') }}
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_supplier_new') }}">Cr√©er un fournisseur</a>
{% endblock %}
