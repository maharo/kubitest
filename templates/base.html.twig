<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('style') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        {% block flash_messages %}
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{ label }}">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endfor %}
        {% endblock %}

        {% block body %}
            {% block header %}
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">KubiTest</a>
                        <div class="d-flex justify-content-center align-items-center">
                            {% if app.user %}
                                <span class="navbar-text me-3">
                                    Bonjour,
                                    {{ app.user.fullName }}
                                    {% if 'ROLE_ADMIN' in app.user.getRoles() %}
                                        <a class="btn btn-outline-primary" href="{{ path('app_order_management') }}"><i class="fa-solid fa-screwdriver-wrench"></i></a>
                                    {% endif %}
                                </span>
                                <a class="btn btn-outline-danger" href="{{ path('app_logout') }}"><i class="fas fa-sign-out"></i></a>
                            {% else %}
                                <a class="btn btn-outline-primary" href="{{ path('app_login') }}"><i class="fa-solid fa-sign-in"></i></a>
                            {% endif %}
                        </div>
                    </div>
                </nav>
            {% endblock header %}
        
            {% block container %}
            {% endblock %}
        {% endblock %}
    </body>
</html>
